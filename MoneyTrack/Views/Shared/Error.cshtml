<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MoneyTrack</title>

    <!-- Fonts & Core CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Planner‑style overrides -->
    <style>
        :root {
            --accent: #7c3aed; /* indigo‑600 */
            --accent-hover: #6d28d9; /* indigo‑700 */
            --bg-light: #f9fafb;
            --bg-card: #ffffff;
            --text-dark: #111827;
            --text-muted: #6b7280;
            --border-light: #e5e7eb;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-light);
            color: var(--text-dark);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Navbar */
        header .navbar {
            background: transparent;
            padding-top: 1.5rem;
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 1.5rem;
            color: var(--text-dark) !important;
        }

        .nav-link {
            font-weight: 600;
            color: var(--text-muted) !important;
            margin-right: 1rem;
            position: relative;
        }

            .nav-link::after {
                content: '';
                position: absolute;
                bottom: -4px;
                left: 0;
                width: 0;
                height: 2px;
                background: var(--accent);
                transition: width .25s ease-in-out;
                border-radius: 1px;
            }

            .nav-link:hover::after,
            .nav-link.active::after {
                width: 100%;
            }

        /* Layout container */
        .container {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            padding-top: 4rem;
            padding-bottom: 4rem;
        }

        /* Headings */
        h1.display-4,
        h1, h2, h3 {
            font-weight: 800;
        }

        /* Buttons */
        .btn-primary, .btn-secondary {
            padding: 0.75rem 2rem;
            border-radius: 9999px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease-in-out;
            margin: 0.5rem;
        }

        .btn-primary {
            background-color: var(--accent);
            border: none;
        }

            .btn-primary:hover {
                background-color: var(--accent-hover);
            }

        .btn-secondary {
            background-color: var(--bg-card);
            color: var(--text-dark);
            border: 1px solid var(--border-light);
        }

            .btn-secondary:hover {
                background-color: #f3f4f6;
            }

        /* Card wrapper */
        .card-style {
            background: var(--bg-card);
            box-shadow: 0 8px 24px rgba(0,0,0,0.05);
            border-radius: 1.5rem;
            padding: 2rem 3rem;
            width: 100%;
            max-width: 900px;
        }

        /* Table – planner style */
        table.table {
            border-collapse: separate;
            border-spacing: 0;
            width: 100%;
            margin-top: 2rem;
            border-radius: 1rem;
            overflow: hidden;
            background: var(--bg-card);
        }

            table.table thead {
                background: #f3f4f6;
            }

                table.table thead th {
                    border-bottom: none;
                    font-weight: 600;
                    color: var(--text-muted);
                    padding: 0.75rem 1rem;
                }

            table.table tbody tr {
                transition: background .15s ease-in-out;
            }

                table.table tbody tr:nth-child(even) {
                    background: var(--bg-light);
                }

                table.table tbody tr:hover {
                    background: #eef2ff; /* light indigo highlight */
                }

            table.table td {
                padding: 0.75rem 1rem;
                border-bottom: 1px solid var(--border-light);
            }

                table.table td:last-child {
                    white-space: nowrap;
                }

        /* Footer */
        footer {
            padding: 2rem 0;
            background: transparent;
            font-size: 0.875rem;
            color: var(--text-muted);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MoneyTrack</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Expenses">Expenses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="card-style">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center">
        &copy; 2025 - MoneyTrack - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
